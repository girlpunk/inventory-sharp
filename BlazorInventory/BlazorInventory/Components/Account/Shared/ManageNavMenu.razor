@using Microsoft.AspNetCore.Identity
@using BlazorInventory.Data

@inject SignInManager<ApplicationUser> SignInManager

<Menu>
    <MenuItem RouterLink="Account/Manage">Profile</MenuItem>
    <MenuItem RouterLink="Account/Manage/Email">Email</MenuItem>
    <MenuItem RouterLink="Account/Manage/ChangePassword">Password</MenuItem>
    @if (_hasExternalLogins)
    {
        <MenuItem RouterLink="Account/Manage/ExternalLogins">External logins</MenuItem>
    }
    <MenuItem RouterLink="Account/Manage/TwoFactorAuthentication">Two-factor authentication</MenuItem>
    <MenuItem RouterLink="Account/Manage/PersonalData">Personal data</MenuItem>
</Menu>

@code {
    private bool _hasExternalLogins;

    protected override async Task OnInitializedAsync()
    {
        _hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
    }
}
