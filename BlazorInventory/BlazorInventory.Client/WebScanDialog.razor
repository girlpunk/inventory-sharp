@using ActualLab.CommandR
@using BlazorInventory.Abstractions.Models
@using BlazorInventory.Client.Geolocation
@using Humanizer
@using ZXingBlazor.Components
@inject ICommander Commander
@inject NavigationManager NavigationManager
@inject IGeolocationService GeolocationService


<EditForm Model="@Inputs" OnSubmit="@Lookup">
    <RadzenFieldset class="fieldset bg-base-200 border-base-300 rounded-box w-xs border p-4" Text="Label details" >
        <RadzenFormField Text="Label Type">
            <RadzenRadioButtonList TValue="LabelType" @bind-Value="Inputs.LabelType">
                <RadzenRadioButtonListItem TValue="LabelType" Value="LabelType.None" Text="None"/>

                @foreach (var tagType in (LabelType[])Enum.GetValuesAsUnderlyingType<LabelType>())
                {
                    <RadzenRadioButtonListItem Value="@tagType" aria-label="@tagType.Humanize()" Text="@tagType.Humanize()"/>
                }
            </RadzenRadioButtonList>
        </RadzenFormField>

        <RadzenFormField Text="Create Scan Record">
            <RadzenCheckBox @bind-Value="@Inputs.CreateScanRecord">Create Scan Record</RadzenCheckBox>
        </RadzenFormField>

        <RadzenFormField Text="Identifier">
            <RadzenTextBox @bind-Value="@Inputs.Identifier">Identifier</RadzenTextBox>
        </RadzenFormField>

        @if (ShowScanBarcode)
        {
            <BarcodeReader ScanResult="@BarcodeScan"
                           ScanBtnTitle="Scan"
                           ResetBtnTitle="Reset"
                           CloseBtnTitle="Close"
                           SelectDeviceBtnTitle="Select Device"
                           Close="@(() => { ShowScanBarcode = false; })"/>
        }
        else
        {
            <RadzenButton Click="@(() => { ShowScanBarcode = true; })">Scan Barcode</RadzenButton>
        }

        <RadzenButton Disabled="@(Loading)" Click="@Lookup">
            Submit
            @if (Loading)
            {
                <span class="loading loading-spinner loading-lg"></span>
            }
        </RadzenButton>
    </RadzenFieldset>

    <RadzenFieldset class="fieldset bg-base-200 border-base-300 rounded-box w-xs border p-4" Text="Results">
        @if (Loading)
        {
            <RadzenProgressBarCircular Size="ProgressBarCircularSize.Large" Mode="ProgressBarMode.Indeterminate"/>
        }
        @if (LastScan != null)
        {
            @if (LastScan.Label == null || LastScan.Item == null)
            {
                <RadzenAlert AlertStyle="AlertStyle.Warning">
                    <span>Label could not be found.</span>
                    <div>
                        <RadzenButton class="btn btn-sm btn-primary" Click="@Create">Create New Item</RadzenButton>
                        <RadzenButton class="btn btn-sm btn-primary" Click="@Create">Link Existing item</RadzenButton>
                    </div>
                </RadzenAlert>
            }
            else
            {
                <legend class="fieldset-legend">Label</legend>
                <ul class="list bg-base-100 rounded-box shadow-md">
                    <li class="p-4 pb-2 text-xs opacity-60 tracking-wide">Label Details</li>
                    <li class="list-row">
                        <div>
                            <div>Identifier</div>
                            <div class="text-xs uppercase font-semibold opacity-60">@LastScan.Label.Identifier</div>
                        </div>
                    </li>
                    <li class="list-row">
                        <div>
                            <div>Type</div>
                            <div class="text-xs uppercase font-semibold opacity-60">@LastScan.Label.LabelType.Humanize()</div>
                        </div>
                    </li>
                    @if (LastScan.Label.ForeignServer != null)
                    {
                        <li class="list-row">
                            <div>
                                <div>Foreign Server</div>
                                <div class="text-xs uppercase font-semibold opacity-60">@LastScan.Label.ForeignServer.Namespace</div>
                            </div>
                        </li>
                    }
                    else
                    {
                        <li class="list-row">
                            <div>
                                <div>Foreign Server</div>
                                <div class="text-xs uppercase font-semibold opacity-60">None</div>
                            </div>
                        </li>
                    }
                    <li class="list-row">
                        <div>
                            <div>Created</div>
                            <div class="text-xs uppercase font-semibold opacity-60">@LastScan.Label.Created.Humanize()</div>
                        </div>
                    </li>
                </ul>

                <legend class="fieldset-legend">Item</legend>
                <ul class="list bg-base-100 rounded-box shadow-md">
                    <li class="p-4 pb-2 text-xs opacity-60 tracking-wide">Item Details</li>
                    <li class="list-row">
                        <div>
                            <div>Name</div>
                            <div class="text-xs uppercase font-semibold opacity-60">@LastScan.Item.Name</div>
                        </div>
                    </li>
                    <li class="list-row">
                        <div>
                            <div>Description</div>
                            <p class="list-col-wrap text-xs">@LastScan.Item.Description</p>
                        </div>
                    </li>
                    @if (LastScan.Item.Parent != null)
                    {
                        <li class="list-row">
                            <div>
                                <div>Parent</div>
                                <div class="text-xs uppercase font-semibold opacity-60">@LastScan.Item.Parent.Name</div>
                            </div>
                        </li>
                    }
                    else
                    {
                        <li class="list-row">
                            <div>
                                <div>Parent</div>
                                <div class="text-xs uppercase font-semibold opacity-60">None</div>
                            </div>
                        </li>
                    }
                    <li class="list-row">
                        <div>
                            <div>Created</div>
                            <div class="text-xs uppercase font-semibold opacity-60">@LastScan.Item.Created.Humanize()</div>
                        </div>
                    </li>
                    <li class="list-row">
                        <div>
                            <div>Labels</div>
                            <div class="text-xs uppercase font-semibold opacity-60">@LastScan.Item.Labels.Humanize()</div>
                        </div>
                    </li>
                    <li class="list-row">
                        <div>
                            <div>Tags</div>
                            <div class="text-xs uppercase font-semibold opacity-60">@LastScan.Item.Tags.Humanize()</div>
                        </div>
                    </li>
                    <li class="list-row">
                        <div>
                            <div>Photos</div>
                            <div class="text-xs uppercase font-semibold opacity-60">@LastScan.Item.Photos.Humanize()</div>
                        </div>
                    </li>
                </ul>

                @if (LastScan.Scan != null)
                {
                    <legend class="fieldset-legend">Scan</legend>
                    <ul class="list bg-base-100 rounded-box shadow-md">
                        <li class="p-4 pb-2 text-xs opacity-60 tracking-wide">Scan Details</li>
                        <li class="list-row">
                            <div>
                                <div>Scanner</div>
                                <div
                                    class="text-xs uppercase font-semibold opacity-60">@LastScan.Scan.Scanner?.Name</div>
                            </div>
                        </li>
                        <li class="list-row">
                            <div>
                                <div>Location</div>
                                <div
                                    class="text-xs uppercase font-semibold opacity-60">@LastScan.Scan.Latitude</div>
                                <div
                                    class="text-xs uppercase font-semibold opacity-60">@LastScan.Scan.Longitude</div>
                            </div>
                        </li>
                        <li class="list-row">
                            <div>
                                <div>Timestamp</div>
                                <div
                                    class="text-xs uppercase font-semibold opacity-60">@LastScan.Scan.Scanned.Humanize()</div>
                            </div>
                        </li>
                        <li class="list-row">
                            <div>
                                <div>Type</div>
                                <div
                                    class="text-xs uppercase font-semibold opacity-60">@LastScan.Scan.ScanType.Humanize()</div>
                            </div>
                        </li>
                    </ul>
                }
            }
        }
        else
        {
            <span>Scan a label to begin</span>
        }
    </RadzenFieldset>
</EditForm>
