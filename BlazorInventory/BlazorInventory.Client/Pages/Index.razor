@page "/"
@attribute [Authorize]
@using BlazorInventory.Abstractions.Service
@inherits ActualLab.Fusion.Blazor.ComputedStateComponent<Index.Counts>
@inject IItemService ItemService
@inject ILabelService LabelService
@inject IScanService ScanService

@if (State.Error != null) {
  <Alert Type="AlertType.Warning">Update error: @State.Error.Message</Alert>
}

<GridRow Gutter="16">
    <GridCol Span="6">
        <Statistic Title="Total Items" Value="@State.ValueOrDefault?.Items" />
    </GridCol>
    <GridCol Span="6">
        <Statistic Title="Total Labels" Value="@State.ValueOrDefault?.Labels" />
    </GridCol>
    <GridCol Span="6">
        <Statistic Title="Total Scans" Value="@State.ValueOrDefault?.Scans" />
    </GridCol>
</GridRow>
