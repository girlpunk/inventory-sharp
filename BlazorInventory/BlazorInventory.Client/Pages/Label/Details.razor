@page "/Label/{Id:guid}"
@attribute [Authorize]
@using BlazorInventory.Abstractions.Service
@using Humanizer
@inherits ActualLab.Fusion.Blazor.ComputedStateComponent<ItemLabelView>
@inject ILabelService LabelService

<Descriptions Bordered Title="Label Details" Size="DescriptionsSize.Middle">
    <DescriptionsItem Title="Created"> @State.Value.Created.Humanize()</DescriptionsItem>
    <DescriptionsItem Title="Foreign Server"><pre>@State.Value.ForeignServerId</pre></DescriptionsItem>
    <DescriptionsItem Title="Identifier"><pre>@State.Value.Identifier</pre></DescriptionsItem>
    <DescriptionsItem Title="Item ID"><pre>@State.Value.ItemId</pre></DescriptionsItem>
    <DescriptionsItem Title="Label Type"><Tag>@State.Value.LabelType</Tag></DescriptionsItem>
</Descriptions>