@page "/"
@using InventorySharp.Services
@inherits ComputedStateComponent<Index.Counts>
@inject IItemService ItemService
@inject ILabelService LabelService
@inject IScanService ScanService

@if (State.Error != null) {
  <div class="alert alert-warning" role="alert">Update error: @State.Error.Message</div>
}

<div class="card w-96 bg-base-100 shadow-sm">
  <div class="card-body">
    <div class="flex justify-between">
      <h2 class="text-2xl">Items</h2>
      <span class="text-3xl font-bold">@State.ValueOrDefault?.Items</span>
    </div>
  </div>
</div>
<div class="card w-96 bg-base-100 shadow-sm">
  <div class="card-body">
    <div class="flex justify-between">
      <h2 class="text-2xl">Labels</h2>
      <span class="text-3xl font-bold">@State.ValueOrDefault?.Labels</span>
    </div>
  </div>
</div>

<div class="card w-96 bg-base-100 shadow-sm">
  <div class="card-body">
    <div class="flex justify-between">
      <h2 class="text-2xl">Items</h2>
      <span class="text-3xl font-bold">@State.ValueOrDefault?.Scans</span>
    </div>
  </div>
</div>
